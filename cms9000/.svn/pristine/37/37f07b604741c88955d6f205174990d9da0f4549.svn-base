		<script type="text/javascript">
			var _sync_url = 'add';
			$(document).ready(function() {
				$.messager.defaults = { ok: "是", cancel: "否" };
				$.fn.zTree.init($("#regionTreeId"), setting, nodes);
				init_grid();
				init_dlg();
			});

			
			function init_dlg()
			{
				$('#dlg').dialog({
				    title: '添加设备',
				    width: 500,
				    height: 502,
				    closed: false,
				    cache: false,
				    modal: true,
				    buttons:[{
						text:'保存',
						handler:function(){
							
						}
					},{
						text:'取消',
						handler:function(){
							
						}
					}]
				});
				
				
			}
			
			
			//导航
			$('#nav-wmenu .wmenu > li').hover(function() {
				$(this).find('.children').animate({ opacity: 'show', height: 'show' }, 200);
				$(this).find('.submenu').addClass('navhover');
			}, function() {
				$('.children').stop(true, true).hide();
				$('.submenu').removeClass('navhover');
			});

			var nodes = [
				{ id: 1, pid: 0, name: "设备类型", open: true },
				{ id: 11, pid: 1, name: "通讯控制器" },
				{ id: 12, pid: 1, name: "通用NVR" },
				{ id: 13, pid: 1, name: "动环主机" }
			];
			//Ztree 配置
			var setting = {
				data: {
					simpleData: {
						enable: true,
						idKey: "id",
						pIdKey: "pid",
						rootPId: 0
					}
				},
				async: {
					enable: true,
					url: "region_tree"
				}
			};

			function getLocalTime(nS) {
				var now = new Date(parseInt(nS));
				var year = now.getYear() + 1900;
				var month = now.getMonth() + 1;
				var date = now.getDate();
				var hour = now.getHours();
				var minute = now.getMinutes();
				var second = now.getSeconds();
				return year + "-" + month + "-" + date + " " + hour + ":" + minute + ":" + second;
			}

			function init_grid() {
				$('#dg').datagrid({
					url: 'getDeciveList',
					fit: true,
					columns: [
						[
							{ field: 'ck', checkbox: true },
							{ field: 'name', title: '名称', width: 150 },
							{ field: 'ip', title: 'IP地址', width: 100 },
							{ field: 'port', title: '端口号', width: 100 },
							{ field: 'username', title: '用户名', width: 100 },
							{ field: 'password', title: '密码', width: 100 },
							{ field: 'state', title: '设备状态', width: 100 },
							{ field: 'remark', title: '备注', width: 100 },
							{
								field: 'gmt_create',
								title: '创建时间',
								width: 120,
								formatter: function(value, row, index) {
									return getLocalTime(value);
								}
							},
							{
								field: 'gmt_modified',
								title: '修改时间',
								width: 120,
								formatter: function(value, row, index) {
									return getLocalTime(value);
								}
							},
						]
					],
					toolbar: '#toolbar',
					pagination: true,
					rownumbers: true
				});

				var p = $('#dg').datagrid('getPager');
				$(p).pagination({
					pageSize: 20,
					pageList: [10, 20, 30, 40, 50],
					beforePageText: '第',
					afterPageText: '页    共 {pages} 页',
					displayMsg: '当前显示 {from} - {to} 条记录   共 {total} 条记录',
				});

			}

		</script>

